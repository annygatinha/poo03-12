6 Leia 8 números inteiros para dentro de um vetor e determine:
      O maior valor e em qual posição ele está
      O menor valor e em qual posição ele está

#include <iostream>
using namespace std;

int main() {
    int numeros[8];

    // Entrada dos valores
    cout << "Digite 8 numeros inteiros:\n";
    for (int i = 0; i < 8; i++) {
        cout << "Valor " << i + 1 << ": ";
        cin >> numeros[i];
    }

    // Inicialização do maior e menor com o primeiro elemento
    int maior = numeros[0];
    int menor = numeros[0];
    int posMaior = 0;
    int posMenor = 0;

    // Verificação dos demais elementos
    for (int i = 1; i < 8; i++) {
        if (numeros[i] > maior) {
            maior = numeros[i];
            posMaior = i;
        }
        if (numeros[i] < menor) {
            menor = numeros[i];
            posMenor = i;
        }
    }

    // Saída
    cout << "\nMaior valor: " << maior 
         << " (posicao " << Maior << ")" << endl;

    cout << "Menor valor: " << menor 
         << " (posicao " << Menor << ")" << endl;

    return 0;
}
